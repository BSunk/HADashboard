<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/device_properties_layout"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/alert_notification_iv"
        android:src="@drawable/ic_notifications_off_black_24dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerVertical="true"
        android:tint="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/audio_notification_iv"
        android:src="@drawable/ic_volume_off_black_24dp"
        android:layout_toEndOf="@+id/alert_notification_iv"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:layout_marginStart="5dp"
        android:tint="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/drag_handle"
        android:src="@drawable/ic_drag_handle_black_24dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@android:color/white"
        android:layout_centerVertical="true"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/drag_handle_contentdescription"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>